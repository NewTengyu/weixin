/* pages/game/game.wxss */
.game {
  width: 400px;
  margin: 0 auto;
  text-align: center;
}

.boss-bar {
  display: flex;
}

.boss-wrapper {

  display: flex;
  margin-left: 5%;
  margin-right: 5%;
  /* width: 100%; */
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  justify-content: center;
  overflow: hidden;
}

.boss {
  width: 200rpx;
  height: 200rpx;
}

.name-bar {
  padding-top: 15%;
  display: flex;
  margin-right: auto;
}

.health-bar {
  /* width: 50%; */
  padding-top: 15%;
  width: 400rpx;
  /* background-color: red; */
}

.button-group {
  padding: 30rpx 50rpx 10rpx;
  width: 100%;
  height: 700rpx;
  box-sizing: border-box;
}

.button {
  float: left;
  line-height: 2;
  width: 300rpx;
  margin: 15rpx 12rpx;
}